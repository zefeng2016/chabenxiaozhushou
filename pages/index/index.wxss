.body {
  background: #2e3b58;
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  padding: 0px;
  margin: 0px;
}

.time {
  margin-top: 30rpx;
  width: 100%;
  height: 480rpx;
  text-align: center;
  background-color: #2e3b58;
  color: #fff;
}

.date {
  font-size: 80pt;
  padding: 0rpx;
  margin: 0rpx;
}

.day {
 
  height: 180rpx;
  position: relative;
  bottom:-18rpx;
  /* padding-top: 60px; */
  padding-left: 20px;
  padding-right: 20px;
  padding-bottom: 20px;
  background-color: #2e3b58;
  color: #fff;
  text-indent: 2rem;
}

.content {
  text-align: left;
}

.author {
  float: right;
}


.checking{
